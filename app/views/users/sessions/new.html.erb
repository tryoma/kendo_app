<% provide(:title, "Log in") %>
<div id="main-content">
  <main>
    <section class="new_edit">
      <div>
        <h2 class="main-title center">ログイン画面</h2>
      </div>
      <div class = "new_edit__form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div>
            <%= f.label :email, class: "label-form" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
          
            <%= f.label :password, class: "label-form"  %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control"  %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class = "new_edit__btn">
            <%= f.submit "ログイン", class: 'btn' %>
          </div>
        <% end %>
        <div class = "new_edit__link">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </section>
  </main>
</div>