<% provide(:title, "Sign up") %>
<div id="main-content">
  <main>
    <section class="new_edit">
      <div>
        <h2 class="main-title center">新規登録画面</h2>
      </div>
      <div class = "new_edit__form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render 'shared/error_messages', object: resource %>

            <%= f.label :user_name, class: "label-form"  %><br />
            <%= f.text_field :user_name, autofocus: true, class: "form-control" %>

            <%= f.label :email, class: "label-form"  %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>

            <%= f.label :password, class: "label-form"  %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上としてください)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>

            <%= f.label :password_confirmation, class: "label-form"  %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>

          <div class = "new_edit__btn">
            <%= f.submit "Sign up", class: 'btn' %>
          </div>
        <% end %>
        <div class = "new_edit__link">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </section>
  </main>
</div>

