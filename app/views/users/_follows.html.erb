<div class="profile__follow">
  <% users.each do |user|%>
    <div class='profile__group'>
      <div class='profile__group__img'>
        <% if user.profile.avatar? %>
          <%= link_to image_tag(user.image.url, class: 'avatar-img middle-img'), user %>
        <% else %>
          <%= link_to image_tag("/assets/default.png", class: 'avatar-img middle-img'), user %>
        <% end %>
      </div>
      <div class='profile__group__name'>
        <p class="blue"><%= user.user_name%></p>
      </div>
    </div>
  <% end %>
</div> 