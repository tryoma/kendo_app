<div class="profile__follow">
  <% users.each do |user|%>
    <div class='profile__group'>
      <div class='profile__group__img'>
        <% if user.profile.image.present? %>
          <%= link_to image_tag(user.profile.image.url), user %>
        <% else %>
          <%= link_to image_tag("default.png"), user %>
        <% end %>
      </div>
      <div class='profile__group__name'>
        <p class="blue"><%= user.user_name%></p>
      </div>
    </div>
  <% end %>
</div> 