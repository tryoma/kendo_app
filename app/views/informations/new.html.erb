<% provide(:title, '新規作成') %>
<% provide(:button_text, '新規作成') %>
<h1>情報新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @information, url: informations_path) do |f| %>
    <%= render 'shared/error_messages', object: @information %>

    <%= f.label :title, class: "label-form" %>
    <%= f.text_field :title, class: "form-control" %>

    <%= f.label :body, class: "label-form" %>
    <%= f.text_field :body, class: "form-control" %>

    <%= f.label :until, class: "label-form" %>
    <%= f.date_field :until, class: "form-control" %>

    <%= f.label :attachment, class: "label-form" %>
    <%= f.text_field :attachment, class: "form-control" %>

    <%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-form" %>
  <% end %>
  </div>
</div>