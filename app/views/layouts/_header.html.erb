<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Kendo App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to current_user.user_name, user_path(current_user.id) %></li>
          <%# 管理者ユーザー%>
          <% if current_user.admin? %>
            <li><%= link_to "Top", root_path %></li>
            <li><%= link_to "ユーザー一覧", users_path %></li>
            <li><%= link_to "稽古会一覧", events_path %></li>
            <li><%= link_to "情報一覧", informations_path %></li>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          <%# ログインユーザー%>  
          <% else %>
            <li><%= link_to "Top", root_path %></li>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          <% end %>
        <%# 未ログインユーザー%>    
        <% else %>
          <li><%= link_to "Top", root_path %></li>
          <li><%= link_to "Log in", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>