<% provide(:title, 'プロフィール編集') %>
<% provide(:button_text, '編集') %>
<h1>プロフィール編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @profile, url: user_profile_path, method: :patch) do |f| %>
    <%= render 'shared/error_messages', object: @profile %>

    <%= f.label :name, class: "label-form" %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :grade, class: "label-form" %>
    <%= f.text_field :grade, class: "form-control" %>

    <%= f.label :birthday, class: "label-form" %>
    <%= f.date_field :birthday, class: "form-control" %>

    <%= f.label :dojo, class: "label-form" %>
    <%= f.text_field :dojo, class: "form-control" %>

    <%= f.label :description, class: "label-form" %>
    <%= f.text_field :description, class: "form-control" %>

    <%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-form" %>
  <% end %>
  </div>
</div>